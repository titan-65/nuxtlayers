# NuxtLayers Environment Variables
# Copy this file to .env and fill in the values

# ===================
# Firebase Configuration
# ===================
NUXT_FIREBASE_PROJECT_ID=your-firebase-project-id
NUXT_FIREBASE_API_KEY=your-firebase-api-key
NUXT_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-id
NUXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key

# Firebase Admin (base64 encoded service account JSON)
FIREBASE_SERVICE_ACCOUNT=base64-encoded-service-account-json

# ===================
# Stripe Configuration
# ===================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
NUXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# ===================
# App Configuration
# ===================
NUXT_PUBLIC_API_BASE=https://nuxtlayers.dev
NUXT_PUBLIC_SITE_URL=https://nuxtlayers.dev

# ===================
# Optional: Email (Resend)
# ===================
RESEND_API_KEY=re_your_resend_api_key
